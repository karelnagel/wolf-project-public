---
import Layout from "../../../components/Layout.astro";
import PopUp from "../../../components/PopUp"
import { TaskInfo } from "../../../components/TaskInfo";
const { projectId } = Astro.params;
if (!projectId) throw new Error("id is required");
console.log("ID:", projectId);
const allTasks = [
  { Responsible: "Veebihunt", Name: "Avakuva disaini loomine", Deadline: new Date('2024-03-03'), Completed: new Date('2024-03-05') },
  { Responsible: "Maarjamõisa Venitehas OÜ", Name: "Avakuva disainile tagasiside andmine", Deadline: new Date('2024-03-03'), Completed: new Date('2024-03-05') },
  { Responsible: "Veebihunt", Name: "Kinnitatud disaini põhjal alamlehtede loomine", Deadline: new Date('2024-03-03'), Completed: new Date('2024-03-05') },


