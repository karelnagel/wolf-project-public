---

<Layout title="uugabuuga" description="uugabuuga">
    <div class="flex justify-center items-cente px-16 py-20 max-md:px-5">
        <div class="flex flex-col w-full max-md:max-w-full">
          <div
            class="flex gap-5 justify-between items-start w-full font-semibold text-center max-md:flex-wrap max-md:max-w-full"
          >
            <img
              loading="lazy"
              src="https://cdn.builder.io/api/v1/image/assets/TEMP/ccf83dd8296fe1892760a31d0966552214f6c40d3d01eb400d120b5d9e7b1fec?apiKey=cae8022f5fdb46b6994961e7252531bd&"
              class="shrink-0 aspect-square w-[30px]"
            />
            <div class="flex gap-5 items-start text-3xl max-md:mt-10">
              <div class="flex flex-col grow self-start">
                <div>Veebiarenduse projekt</div>
                <img
                  loading="lazy"
                  src="https://cdn.builder.io/api/v1/image/assets/TEMP/b0f66acc66b0846f0ef6ef77ebd27d759f4a3f839912d213efe5ce04fc7430d3?apiKey=cae8022f5fdb46b6994961e7252531bd&"
                  class="self-center mt-11 w-10 aspect-[1.03] max-md:mt-10"
                />
                <TaskInfo tasks={allTasks} />
                <button class="self-center">
                    <img
                    loading="lazy"
                    src="https://cdn.builder.io/api/v1/image/assets/TEMP/b0f66acc66b0846f0ef6ef77ebd27d759f4a3f839912d213efe5ce04fc7430d3?apiKey=cae8022f5fdb46b6994961e7252531bd&"
                    class="self-center justify-between   mt-11 w-10 rotate-180 max-md:mt-10"
                    />
                </button>
              </div>
            </div>
            <div class="justify-center p-4 text-normal -mt-3 rounded-2xl bg-primary">
              Logi välja
            </div>
          </div>
          <PopUp client:load />
</Layout>
