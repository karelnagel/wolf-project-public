---
import { Button } from "./Button";
const user = Astro.locals.user;
const t = Astro.locals.t;
const logout = t.header.logout;
const newproject = t.header.newproject;
---

<div class="flex items-center justify-between pt-20 px-20">
  {
    !Astro.url.pathname.startsWith("/login") && user && user?.role !== "client" && (
      <Button href="/newproject" client:load>
        {newproject}
      </Button>
    )
  }
  {
    !Astro.url.pathname.startsWith("/login") && (
      <div class="flex flex-grow items-center justify-center font-semibold text-3xl mt-4">
        Wolf Projects
      </div>
    )
  }
  {
    !Astro.url.pathname.startsWith("/login") && user && (
      <Button href="/logout" client:load>
        {logout}
      </Button>
    )
  }
</div>
